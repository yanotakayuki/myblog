<div class="form-content">
  <%= form_for @blog, :url => {:action => :update} do |f| %>
      <div class="row">
        <div class="col s12">
          <div class="row">
            <div class="input-field col s12">
              <div id="textarea1" class="materialize-textarea"></div>
              <%= f.text_field :text %>
              <label for="textarea1">edit</label>
            </div>
          </div>
        </div>
      </div>
    <%= f.submit "SEND", class: "waves-effect waves-light btn blue lighten-2 text-white" %>
  <% end %>
</div>
